<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="./thumbnail-legacy.css" />
  </head>
  {% if job_title and job_company and job_location %}
    <body class="thumbnail-legacy-job">
      <h1>Nabídka práce pro začínající programátory</h1>
      <h2>
        <strong class="job-company">{{ job_company }}</strong>
        <small class="job-location">{{ job_location }}</small>
      </h2>
      <p class="job-title">{{ job_title }}</p>
    </body>
  {% elif title %}
    <body class="thumbnail-legacy-title">
      <img src="{{ images_dir }}/logo-legacy.svg" />
      <h1>
        {% if above_title %}
          <small>{{ above_title }}<small></small></small>
        {% endif %}
        <strong>{{ title }}</strong>
        {% if below_title %}
          <small>{{ below_title }}<small></small></small>
        {% endif %}
      </h1>
    </body>
  {% else %}
    <body class="thumbnail-legacy">
      <img src="{{ images_dir }}/logo-legacy.svg" />
    </body>
  {% endif %}
</html>
